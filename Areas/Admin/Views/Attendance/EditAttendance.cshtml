@model AttendanceFormViewModel

@{
    ViewData["Title"] = "Edit Attendance";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditAttendance">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SelectedStudentId" class="control-label">Select Student:</label>
        <select id="selectedStudentId" name="SelectedStudentId" class="form-control">
            <option value="">-- Select Student --</option>
            @foreach (var studentOption in Model.StudentOptions)
            {
                <option value="@studentOption.Value">@studentOption.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedSubjectId" class="control-label">Select Subject:</label>
        <select id="selectedSubjectId" name="SelectedSubjectId" class="form-control">
            <option value="">-- Select Subject --</option>
            @foreach (var subjectOption in Model.SubjectOptions)
            {
                <option value="@subjectOption.Value">@subjectOption.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedSubjectId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label">Attendance Status:</label>
        <select id="status" name="Status" class="form-control">
            <option value="">-- Select Status --</option>
            @foreach (var statusOption in Model.StatusOptions)
            {
                <option value="@statusOption.Value">@statusOption.Text</option>
            }
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
