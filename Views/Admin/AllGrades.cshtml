@model IEnumerable<LearnLink.Models.GradeViewModel>

@{
    ViewData["Title"] = "All Grades";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Student</th>
            <th>Grade</th>
            <th>Date and Time</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.Subject</td>
                <td>@(grade.StudentFirstName + " " + grade.StudentLastName)</td>
                <td>@grade.Value</td>
                <td>@grade.DateAndTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(grade.TeacherFirstName + " " + grade.TeacherLastName)</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditGrade" asp-route-id="@grade.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
                    <button class="btn btn-link" data-toggle="modal" data-target="#deleteGradeModal_@grade.Id">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </td>
            </tr>
            <div class="modal fade" id="deleteGradeModal_@grade.Id" tabindex="-1" role="dialog" aria-labelledby="deleteGradeModalLabel_@grade.Id" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteGradeModalLabel_@grade.Id">Confirm Deletion</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this grade?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <form method="post" action="@Url.Action("DeleteGrade", "Admin", new { id = grade.Id })">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
