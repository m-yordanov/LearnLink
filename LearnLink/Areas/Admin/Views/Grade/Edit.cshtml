@model GradeFormViewModel

@{
    ViewData["Title"] = "Edit Grade";
}

<h1>@ViewData["Title"]</h1>

@if (Model.GradeEditedSuccessfully)
{
    <div class="alert alert-success" role="alert">
        Grade edited successfully!
    </div>
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SelectedStudentId" class="control-label">Select Student:</label>
        <select id="selectedStudentId" name="SelectedStudentId" class="form-control">
            <option value="">-- Select Student --</option>
            @foreach (var studentOption in Model.StudentOptions)
            {
                <option value="@studentOption.Value">@studentOption.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedSubjectId" class="control-label">Select Subject:</label>
        <select id="selectedSubjectId" name="SelectedSubjectId" class="form-control">
            <option value="">-- Select Subject --</option>
            @foreach (var subjectOption in Model.SubjectOptions)
            {
                <option value="@subjectOption.Value">@subjectOption.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade" class="control-label">Grade:</label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="All" class="btn btn-secondary">Cancel</a>
    </div>
</form>
