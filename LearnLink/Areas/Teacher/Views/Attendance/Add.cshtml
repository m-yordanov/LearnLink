@model AttendanceFormViewModel
@{
    ViewData["Title"] = "Add Attendance";
}

<div class="text-center mb-4">
<h1>Add Attendance</h1>
</div>

@if (Model.AttendanceAddedSuccessfully)
{
    <div class="alert alert-success" role="alert">
        Attendance added successfully!
    </div>
}

<form asp-controller="Attendance" asp-action="Add" method="post">
    <div class="form-group">
        <label for="selectedStudentId">Select Student:</label>
        <select id="selectedStudentId" name="SelectedStudentId" class="form-control">
            <option value="">-- Select Student --</option>
            @foreach (var studentOption in Model.StudentOptions)
            {
                <option value="@studentOption.Value">@studentOption.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="selectedSubjectId">Select Subject:</label>
        <select id="selectedSubjectId" name="SelectedSubjectId" class="form-control">
            <option value="">-- Select Subject --</option>
            @foreach (var subjectOption in Model.SubjectOptions)
            {
                <option value="@subjectOption.Value">@subjectOption.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedSubjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" name="Status" class="form-control">
            <option value="">-- Select Status --</option>
            <option value="Present">Present</option>
            <option value="Absent">Absent</option>
            <option value="Excused">Excused</option>
            <option value="Late">Late</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateAndTime"></label>
        <input asp-for="DateAndTime" class="form-control" type="text" value="@Model.DateAndTime.ToString("dd.MM.yyyy HH:mm")" />
        <span asp-validation-for="DateAndTime" class="text-danger"></span>
    </div>



    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
