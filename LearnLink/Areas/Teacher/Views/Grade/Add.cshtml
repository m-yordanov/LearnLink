@model GradeFormViewModel

@{
    ViewData["Title"] = "Add Grade";
}

<div class="text-center mb-4">
    <h1>@ViewData["Title"]</h1>
</div>

@if (Model.GradeAddedSuccessfully)
{
    <div class="alert alert-success" role="alert">
        Grade added successfully!
    </div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Grade" asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="SelectedStudentId" class="form-label">Select Student:</label>
                <select asp-for="SelectedStudentId" class="form-control" aria-required="true">
                    <option value="">-- Select Student --</option>
                    @foreach (var studentOption in Model.StudentOptions)
                    {
                        <option value="@studentOption.Value">@studentOption.Text</option>
                    }
                </select>
                <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedSubjectId" class="form-label">Select Subject:</label>
                <select asp-for="SelectedSubjectId" class="form-control" aria-required="true">
                    <option value="">-- Select Subject --</option>
                    @foreach (var subjectOption in Model.SubjectOptions)
                    {
                        <option value="@subjectOption.Value">@subjectOption.Text</option>
                    }
                </select>
                <span asp-validation-for="SelectedSubjectId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Grade" class="form-label">Grade:</label>
                <input asp-for="Grade" class="form-control" aria-required="true" value="2.00" step="0.5" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
